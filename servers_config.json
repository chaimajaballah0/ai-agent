{
    "mcpServers": {
        "email": {
            "command": "poetry run python",
            "args": ["../servers/email.py"],
            "env": {
                "GMAIL_CREDS_FILE_PATH": "../.google/client_creds.json",
                "GMAIL_TOKEN_PATH": "../.google/token.json"
            }
        },
        "search": {
            "command": "poetry run python",
            "args": ["../servers/search.py"],
            "env": {
                "SERPAPI_API_KEY": "${SERPAPI_API_KEY}"
            }
        },
        "website_browsing": {
            "command": "poetry run python",
            "args": ["../servers/website_browsing.py"]
        }
    }
} 